ScreenManager:
    MainScreen:
    DrillsScreen:
    TwoByFourScreen:

<MainScreen>:
    name: 'main'
    MDLabel:
        text: 'RND'
        font_style:  'H1'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y' : 0.6}
        bold: True
    MDLabel:
        text: 'Golf'
        font_style:  'H3'
        theme_text_color: "Custom"
        text_color : (0,0.4,0,1)
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y' : 0.53}
        bold: True
    MDLabel:
        markup: True
        text: 'YOUR BEST [b]R[/b]OU[b]ND[/b]s ARE EA[b]RN[/b]E[b]D[/b] THROUGH PRACTICE'
        font_style:  'Body1'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y' : 0.49}
        italics: True

    MDBottomAppBar:
        MDTopAppBar:
            icon: 'play'
            type: 'bottom'
            on_action_button: root.manager.current = 'drills'
    
<DrillsScreen>:
    name: 'drills'
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title : 'Drills'
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'main')]]
        ScrollView:
            MDList:
                TwoLineListItem:
                    text: 'Two x Fours'
                    secondary_text: 'Up & Down Practice'
                    on_release: root.manager.current = 'twobyfour'
                TwoLineListItem:
                    text: 'Star Drill'
                    secondary_text: 'Short Putts Under Pressure'
        MDRectangleFlatButton:
            text: 'Back'
            pos_hint: {'center_x':0.5,'center_y':0.1}
            on_press: root.manager.current = 'main'
    MDBoxLayout:
        id: display_size
        

<TwoByFourScreen>:
    name: 'twobyfour'
    MDBoxLayout:
        id: twobyfour_main_container
        orientation: "vertical"
        
        MDTopAppBar:
            title : 'Two x Fours'
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'drills')]]
        MDLabel:
            markup: True
            text: 'Get Up & Down with [b]two[/b] balls in [b]four[/b] strokes.\n At each station, chip 2 balls towards the same hole and then putt each until holed out.[b] Score = Total Combined Strokes'
            font_style:  'Body2'
            halign: 'left'
            valign: 'top'
            size_hint: 1, 0.05

        MDBoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.30
            padding: "10dp"

            MDBoxLayout:
                id: twobyfour_current_container

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.5
            padding: "10dp"
            
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "1dp"
                MDLabel:
                    text: 'Club'
                    bold: True
                
                MDSegmentedControl:
                    id: twobyfour_club
                    MDSegmentedControlItem:
                        text: "PW"
                        font_size: "10dp"
                    MDSegmentedControlItem:
                        text: "GW"
                        font_size: "10dp"
                    MDSegmentedControlItem:
                        text: "SW"
                        font_size: "10dp"
                    MDSegmentedControlItem:
                        text: "LW"
                        font_size: "10dp"

            MDBoxLayout:
                orientation: 'vertical'
                spacing: "10dp"
                MDLabel:
                    text: 'Lie'
                    bold: True
                
                MDSegmentedControl:
                    id: twobyfour_lie
                    MDSegmentedControlItem:
                        text: "Tight"
                        font_size: "10dp"
                    MDSegmentedControlItem:
                        text: "Rough"
                        font_size: "10dp"
                    MDSegmentedControlItem:
                        text: "Sand"
                        font_size: "10dp"

                        
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "10dp"
                MDLabel:
                    text: 'Total Distance (ft)'
                    bold: True
                MDBoxLayout:
                    orientation: 'horizontal'

                    MDSlider:
                        id: twobyfour_distance
                        size_hint: 0.85, None
                        hint: True
                        min: 0
                        max: 60
                        value: 20
                        step: 5
                        hint_bg_color: app.theme_cls.primary_color
                        hint_text_color: "white"
                    MDLabel:
                        text: str(int(twobyfour_distance.value)) + " ft"
                        bold: True
                        size_hint: 0.15, None
                    
            
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "10dp"
                MDLabel:
                    text: 'Score'
                    bold: True
            
                MDBoxLayout:
                    orientation: 'horizontal'
                    MDSlider:
                        id: twobyfour_score
                        size_hint: 0.6, None
                        hint: True
                        min: 2
                        max: 8
                        value: 4
                        step: 1
                        hint_bg_color: app.theme_cls.primary_color
                        hint_text_color: "white"
                    
                    MDLabel:
                        text: str(twobyfour_score.value)
                        bold: True
                        font_style: "H4"
                        size_hint: 0.1, None

                    MDRaisedButton:
                        text: "SAVE"
                        size_hint: 0.2, None
                        on_release: app.root.get_screen("twobyfour").add_score('twobyfours', app.session_id, twobyfour_score); twobyfour_score.text = ''





<TwoByFourDialog>:
    orientation: "vertical"
    spacing: "10dp"
    size_hint: None, None
    height: "500dp"

    MDBoxLayout:
        orientation: 'vertical'
        spacing: "10dp"
        MDBoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            
            MDLabel:
                text: 'Score'
                bold: True
            
            MDTextField:
                id: twobyfour_score
                text: ''
                hint_text: "Add Score..."
                max_text_length: 2
                input_type: 'tel'
                input_filter: 'int'
        
        MDBoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            MDLabel:
                text: 'Club'
                bold: True
            
            MDSegmentedControl:
                id: twobyfour_club
                MDSegmentedControlItem:
                    text: "PW"
                    font_size: "10dp"
                MDSegmentedControlItem:
                    text: "GW"
                    font_size: "10dp"
                MDSegmentedControlItem:
                    text: "SW"
                    font_size: "10dp"
                MDSegmentedControlItem:
                    text: "LW"
                    font_size: "10dp"

        MDBoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            md_bg_color: "blue"
            MDLabel:
                text: 'Lie'
                bold: True
            
            MDSegmentedControl:
                id: twobyfour_lie
                MDSegmentedControlItem:
                    text: "Tight"
                    font_size: "10dp"
                MDSegmentedControlItem:
                    text: "Rough"
                    font_size: "10dp"
                MDSegmentedControlItem:
                    text: "Sand"
                    font_size: "10dp"

                    
        MDBoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            md_bg_color: "red"
            MDLabel:
                text: 'Total Distance (ft)'
                bold: True
            MDBoxLayout:
                orientation: 'horizontal'
                md_bg_color: app.theme_cls.primary_color

                MDSlider:
                    width: "300dp"
                    id: twobyfour_distance
                    hint: True
                    min: 0
                    max: 60
                    value: 20
                    step: 5
                    hint_bg_color: "red"
                    hint_text_color: "white"
            

        MDBoxLayout:
            orientation: 'horizontal'

            MDRaisedButton:
                text: "SAVE"
                on_release: app.root.get_screen("twobyfour").add_score('twobyfours', app.session_id, twobyfour_score); twobyfour_score.text = ''
            MDFlatButton:
                text: 'CANCEL'
                on_release: app.root.get_screen("twobyfour").close_dialog()



<OldControl>
    MDSegmentedControl:
        id: old
        MDSegmentedControlItem:
            text: "PW"
        MDSegmentedControlItem:
            text: "GW"
        MDSegmentedControlItem:
            text: "SW"
        MDSegmentedControlItem:
            text: "LW"