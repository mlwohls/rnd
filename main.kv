ScreenManager:
    MainScreen:
    DrillsScreen:
    TwoByFourScreen:
    StarScreen:
    RouletteScreen:

<PlusMinus>
    orientation: 'horizontal'
    size_hint: 1, None
    MDIconButton:
        icon: "minus-box-outline"
        theme_icon_color: "Custom"
        icon_color: "red"
        icon_size: "30dp"
        on_release: self.parent.minus()
        #halign: 'left'
        size_hint: 0.5, None
    MDIconButton:
        icon: "plus-box-outline"
        theme_icon_color: "Custom"
        icon_color: "green"
        icon_size: "30dp"
        on_release: self.parent.plus()
        #halign: 'right'
        size_hint: 0.5, None

<RouletteCard>
    line_color: "black"
    style: "outlined"
    value: 0
    distance_text: 'Yep'
    id: card
    MDBoxLayout:
        orientation: 'vertical'
        MDLabel:
            id: distance
            halign: "center"
            #text: ''
            text: self.parent.parent.distance_text
            bold: True
        MDLabel:
            id: score
            halign: "center"
            text: ''
            text: str(self.parent.parent.value)
            bold: True
            font_style: "H4"
        PlusMinus:

<MainScreen>:
    name: 'main'
    MDLabel:
        text: 'RND'
        font_style:  'H1'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y' : 0.6}
        bold: True
    MDLabel:
        text: 'Golf'
        font_style:  'H3'
        theme_text_color: "Custom"
        text_color : (0,0.4,0,1)
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y' : 0.53}
        bold: True
    MDLabel:
        markup: True
        text: 'YOUR BEST [b]R[/b]OU[b]ND[/b]s ARE EA[b]RN[/b]E[b]D[/b] THROUGH PRACTICE'
        font_style:  'Body1'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y' : 0.49}
        italics: True

    MDBottomAppBar:
        MDTopAppBar:
            icon: 'play'
            type: 'bottom'
            on_action_button: root.manager.current = 'drills'
    
<DrillsScreen>:
    name: 'drills'
    MDBoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title : 'Drills'
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'main')]]
        ScrollView:
            MDList:
                TwoLineListItem:
                    text: 'Two x Fours'
                    secondary_text: 'Up & Down Practice'
                    on_release: root.manager.current = 'twobyfour'
                TwoLineListItem:
                    text: 'Wedge Roulette'
                    secondary_text: 'Learn & Improve Your Wedges'
                    on_release: root.manager.current = 'roulette'
                TwoLineListItem:
                    text: 'Star Drill'
                    secondary_text: 'Short Putts Under Pressure'
                    on_release: root.manager.current = 'star'
        MDRectangleFlatButton:
            text: 'Back'
            pos_hint: {'center_x':0.5,'center_y':0.1}
            on_press: root.manager.current = 'main'
    MDBoxLayout:
        id: display_size
        

<TwoByFourScreen>:
    name: 'twobyfour'
    MDBoxLayout:
        id: twobyfour_main_container
        orientation: "vertical"
        
        MDTopAppBar:
            title : 'Two x Fours'
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'drills')]]
        MDLabel:
            markup: True
            text: 'Get Up & Down with [b]two[/b] balls in [b]four[/b] strokes.\n At each station, chip 2 balls towards the same hole and then putt each until holed out.[b] Score = Total Combined Strokes'
            font_style:  'Body2'
            halign: 'left'
            valign: 'top'
            size_hint: 1, 0.05

        MDBoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.30
            padding: "10dp"
            
            ScrollView:
                size_hint: 1,1
                do_scroll_x: False
                MDBoxLayout:
                    id: twobyfour_current_container

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.5
            padding: "10dp"
            
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "1dp"
                MDLabel:
                    text: 'Club'
                    bold: True
                
                MDSegmentedControl:
                    id: twobyfour_club
                    MDSegmentedControlItem:
                        text: "PW"
                        font_size: "10dp"
                    MDSegmentedControlItem:
                        text: "GW"
                        font_size: "10dp"
                    MDSegmentedControlItem:
                        text: "SW"
                        font_size: "10dp"
                    MDSegmentedControlItem:
                        text: "LW"
                        font_size: "10dp"

            MDBoxLayout:
                orientation: 'vertical'
                spacing: "10dp"
                MDLabel:
                    text: 'Lie'
                    bold: True
                
                MDSegmentedControl:
                    id: twobyfour_lie
                    MDSegmentedControlItem:
                        text: "Tight"
                        font_size: "10dp"
                    MDSegmentedControlItem:
                        text: "Rough"
                        font_size: "10dp"
                    MDSegmentedControlItem:
                        text: "Sand"
                        font_size: "10dp"

                        
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "10dp"
                MDLabel:
                    text: 'Total Distance (ft)'
                    bold: True
                MDBoxLayout:
                    orientation: 'horizontal'

                    MDSlider:
                        id: twobyfour_distance
                        size_hint: 0.85, None
                        hint: True
                        min: 0
                        max: 60
                        value: 20
                        step: 5
                        hint_bg_color: app.theme_cls.primary_color
                        hint_text_color: "white"
                    MDLabel:
                        text: str(int(twobyfour_distance.value)) + " ft"
                        bold: True
                        size_hint: 0.15, None
                    
            
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "10dp"
                MDLabel:
                    text: 'Score'
                    bold: True
            
                MDBoxLayout:
                    orientation: 'horizontal'
                    MDSlider:
                        id: twobyfour_score
                        size_hint: 0.6, None
                        hint: True
                        min: 2
                        max: 8
                        value: 4
                        step: 1
                        hint_bg_color: app.theme_cls.primary_color
                        hint_text_color: "white"
                    
                    MDLabel:
                        text: str(twobyfour_score.value)
                        bold: True
                        font_style: "H4"
                        size_hint: 0.1, None

                    MDRaisedButton:
                        text: "SAVE"
                        size_hint: 0.2, None
                        on_release: app.root.get_screen("twobyfour").add_score('twobyfours', app.session_id, twobyfour_score, twobyfour_distance, twobyfour_club.current_active_segment or "PW", twobyfour_lie.current_active_segment or "Tight")
            
            MDBoxLayout:
                orientation: 'horizontal'
                spacing: "10dp"
                MDRaisedButton:
                    pos_hint: {'center_x': 0.5}
                    text: "History & Analysis"
                    size_hint: 0.2, None
                    on_release: app.root.get_screen("twobyfour").add_score('twobyfours', app.session_id, twobyfour_score, twobyfour_distance, twobyfour_club.current_active_segment or "PW", twobyfour_lie.current_active_segment or "Tight")
            

<StarScreen>:
    name: 'star'
    MDBoxLayout:
        id: star_main_container
        orientation: "vertical"
        
        MDTopAppBar:
            title : 'Star Drill'
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'drills')]]
        MDLabel:
            markup: True
            text: 'Make as many consecutive putts without missing from a given distance. Setup 4-6 balls around the hole. [b] Score = Putts in a row without a miss'
            font_style:  'Body2'
            halign: 'left'
            valign: 'top'
            size_hint: 1, 0.05

        MDBoxLayout:
            orientation: "vertical"
            size_hint: 1, 0.40
            padding: "10dp"
            
            ScrollView:
                size_hint: 1,1
                do_scroll_x: False
                MDBoxLayout:
                    id: star_current_container

        MDBoxLayout:
            orientation: 'vertical'
            size_hint: 0.9, 0.4
            padding: "10dp"
                        
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "10dp"
                MDLabel:
                    text: 'Distance (ft)'
                    bold: True
                MDBoxLayout:
                    orientation: 'horizontal'

                    MDSlider:
                        id: star_distance
                        size_hint: 0.85, None
                        hint: True
                        min: 2
                        max: 10
                        value: 3
                        step: 1
                        hint_bg_color: app.theme_cls.primary_color
                        hint_text_color: "white"
                    MDLabel:
                        text: str(int(star_distance.value)) + " ft"
                        bold: True
                        size_hint: 0.15, None
                    
            
            MDBoxLayout:
                orientation: 'vertical'
                spacing: "10dp"
                MDLabel:
                    text: 'Score'
                    bold: True
            
                MDBoxLayout:
                    orientation: 'horizontal'
                    MDTextField:
                        id: star_score
                        text: ''
                        hint_text: "Consecutive Putts..."
                        max_text_length: 2
                        input_type: 'tel'
                        input_filter: 'int'

                    MDRaisedButton:
                        text: "SAVE"
                        size_hint: 0.2, None
                        on_release: app.root.get_screen("star").add_score('star', app.session_id, star_score, star_distance); star_score.text = ''


<RouletteScreen>:
    name: 'roulette'
    MDBoxLayout:
        id: roulette_main_container
        orientation: "vertical"
        
        MDTopAppBar:
            title : 'Wedge Roulette'
            left_action_items: [["arrow-left", lambda x: setattr(root.manager, 'current', 'drills')]]

        MDBoxLayout:  #Main Container
            id: main_container
            orientation: 'vertical'

            MDBoxLayout:  #Inputs
                id: input_container
                orientation: 'vertical'
                size_hint: 1, 0.20
                padding: "5dp", "1dp"

                MDBoxLayout:
                    orientation: 'vertical'
                    MDLabel:
                        bold: True
                        text: 'Station Attributes'
                        font_style:  'H6'

                    MDRaisedButton:
                        id: auto_button
                        text: "Roulette"
                        on_release: root.auto_choose()
                        
                
                MDGridLayout:
                    rows: 2
                    MDLabel:
                        bold: True
                        text: 'Club'
                        font_style:  'Body1'
                        halign: 'left'
                    MDLabel:
                        bold: True
                        text: 'Surface'
                        font_style:  'Body1'
                        halign: 'left'
                    MDLabel:
                        bold: True
                        text: 'Distance'
                        font_style:  'Body1'
                        halign: 'left'
                    MDLabel:
                        bold: True
                        text: 'Carry'
                        font_style:  'Body1'
                        halign: 'left'
                    MDLabel:
                        bold: True
                        text: 'Stance'
                        font_style:  'Body1'
                        halign: 'left'
                    MDLabel:
                        bold: True
                        text: 'Break'
                        font_style:  'Body1'
                        halign: 'left'

                    MDRaisedButton:
                        id: club_button
                        text: "--"
                        on_release: root.club_menu.open()
                        md_bg_color: "gray"
                    MDRaisedButton:
                        id: surface_button
                        text: "--"
                        on_release: root.surface_menu.open()
                        md_bg_color: "gray"
                    MDRaisedButton:
                        id: distance_button
                        text: "--"
                        on_release: root.distance_menu.open()
                        md_bg_color: "gray"
                    MDRaisedButton:
                        id: carry_button
                        text: "--"
                        on_release: root.carry_menu.open()
                        md_bg_color: "gray"
                    MDRaisedButton:
                        id: stance_button
                        text: "--"
                        on_release: root.stance_menu.open()
                        md_bg_color: "gray"
                    MDRaisedButton:
                        id: break_button
                        text: "--"
                        on_release: root.break_menu.open()
                        md_bg_color: "gray"
                    
            MDBoxLayout: #Spacer
                size_hint: None, 0.015
               
                    
            MDBoxLayout: #Scores
                orientation: 'vertical'
                size_hint: 1.0, 0.30
                MDLabel:
                    bold: True
                    text: 'Scores'
                    font_style:  'H6'
                    size_hint: 1, 0.2
                MDBoxLayout:
                    orientation: 'horizontal'
                    padding: "5dp", "0dp"
                    spacing: "5dp"

                    RouletteCard:
                        id: roulette_3
                        distance_text: '< 3 ft'
                        value: 0
                    RouletteCard:
                        id: roulette_6
                        distance_text: '3-6 ft'
                        value: 0  
                    RouletteCard:
                        id: roulette_9
                        distance_text: '7-9 ft'
                        value: 0  
                    RouletteCard:
                        id: roulette_12
                        distance_text: '10 ft +'
                        value: 0    

            
                MDBoxLayout:
                    orientation: 'horizontal'
                    size_hint: 1, 0.2
                    MDRaisedButton:
                        text: "SUBMIT"
                        size_hint: 0.8, None
                        on_release: root.submit_score()
                
            MDBoxLayout:  #Analysis
                orientation: 'horizontal'
                spacing: "10dp"
                md_bg_color: "red"
                size_hint: 1.0, 0.5
                MDRaisedButton:
                    text: "Wedge Analysis"
                    size_hint: 0.2, None
                    on_release: root.manager.current = 'wedges_analysis'



<TwoByFourDialog>:
    orientation: "vertical"
    spacing: "10dp"
    size_hint: None, None
    height: "500dp"

    MDBoxLayout:
        orientation: 'vertical'
        spacing: "10dp"
        MDBoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            
            MDLabel:
                text: 'Score'
                bold: True
            
            MDTextField:
                id: twobyfour_score
                text: ''
                hint_text: "Add Score..."
                max_text_length: 2
                input_type: 'tel'
                input_filter: 'int'
        
        MDBoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            MDLabel:
                text: 'Club'
                bold: True
            
            MDSegmentedControl:
                id: twobyfour_club
                MDSegmentedControlItem:
                    text: "PW"
                    font_size: "10dp"
                MDSegmentedControlItem:
                    text: "GW"
                    font_size: "10dp"
                MDSegmentedControlItem:
                    text: "SW"
                    font_size: "10dp"
                MDSegmentedControlItem:
                    text: "LW"
                    font_size: "10dp"

        MDBoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            md_bg_color: "blue"
            MDLabel:
                text: 'Lie'
                bold: True

            MDSegmentedControl:
                id: twobyfour_lie
                MDSegmentedControlItem:
                    text: "Tight"
                    font_size: "10dp"
                MDSegmentedControlItem:
                    text: "Rough"
                    font_size: "10dp"
                MDSegmentedControlItem:
                    text: "Sand"
                    font_size: "10dp"

                    
        MDBoxLayout:
            orientation: 'vertical'
            spacing: "10dp"
            md_bg_color: "red"
            MDLabel:
                text: 'Total Distance (ft)'
                bold: True
            MDBoxLayout:
                orientation: 'horizontal'
                md_bg_color: app.theme_cls.primary_color

                MDSlider:
                    width: "300dp"
                    id: twobyfour_distance
                    hint: True
                    min: 0
                    max: 60
                    value: 20
                    step: 5
                    hint_bg_color: "red"
                    hint_text_color: "white"
            

        MDBoxLayout:
            orientation: 'horizontal'

            MDRaisedButton:
                text: "SAVE"
                on_release: app.root.get_screen("twobyfour").add_score('twobyfours', app.session_id, twobyfour_score); twobyfour_score.text = ''
            MDFlatButton:
                text: 'CANCEL'
                on_release: app.root.get_screen("twobyfour").close_dialog()



<OldControl>
    MDSegmentedControl:
        id: old
        MDSegmentedControlItem:
            text: "PW"
        MDSegmentedControlItem:
            text: "GW"
        MDSegmentedControlItem:
            text: "SW"
        MDSegmentedControlItem:
            text: "LW"